# book: WS_SERVICE_NAME
# ttyd: ttyd-WS_SERVICE_NAME
# ttyd-port: TTYD_PORT
server {
    listen 80;
    listen [::]:80;

    server_name your-domain.com www.your-domain.com;

    # Specific location for static files
    location /WS_SERVICE_NAME/ {
        alias /var/www/WS_SERVICE_NAME/;
        index index.html index.htm;
        try_files $uri $uri/ =404;
    }

    # WebSocket proxy for ttyd
    location /WS_SERVICE_NAME_TTYD/ {
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_pass http://127.0.0.1:TTYD_PORT/;

        # Additional recommended WebSocket settings
        proxy_buffering off;
        proxy_read_timeout 300s;
        proxy_send_timeout 300s;
    }

    # Handle 404 errors for this service's paths
    # TODO: this results in all pages in this path going to 404 - I have to comment out this section to see the above pages. Note this nginx config file is one of many nginx configs on this same machine. This section only needs to catch errors for the below paths.
    # Commenting out until the above todo is resolved
    #location ~ ^/(WS_SERVICE_NAME|WS_SERVICE_NAME_TTYD)/.* {
    #    return 404;
    #}
    # Custom error page for 404 errors only for these specific paths
    error_page 404 /404.html;
    location = /404.html {
        root /var/www/WS_SERVICE_NAME;
        internal;
    }
}
